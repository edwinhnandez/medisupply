DYNAMODB_SECRET_ACCESS_KEY=dummy

# KEDA (para producción)
KEDA_MIN_REPLICAS=1
KEDA_MAX_REPLICAS=10
KEDA_POLLING_INTERVAL=30
KEDA_COOLDOWN_PERIOD=300
